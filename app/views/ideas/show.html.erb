<h2><%= @idea.title %></h2>

<p><%= @idea.description %></p>

<p>Likes: <%= @idea.likes.count %></p>


<% if can? :update, @idea %>
  <%= link_to "Edit", edit_user_idea_path(@idea.user_id, @idea) %>
<% end %>

<% if can? :destroy, @idea %>
  <%= link_to "Delete", user_idea_path(@idea.user_id, @idea), method: :delete %>
<% end %>
